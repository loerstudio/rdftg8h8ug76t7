<script>
    // This is to simulate the layout shift from the keyboard
    const mainContent = document.querySelector('main');
    const footer = document.querySelector('footer');
    const nav = document.querySelector('.fixed.bottom-0');
    // As we can't detect the real keyboard, let's toggle visibility of nav for demonstration
    // footer.addEventListener('focusin', () => {
    //   nav.classList.add('hidden');
    // });
    // footer.addEventListener('focusout', () => {
    //    nav.classList.remove('hidden');
    // });
    // Hiding the nav as the chat input is part of the screen, not the system keyboard overlay
     nav.classList.add('hidden');
     // The footer will be the chat input area instead
     footer.classList.remove('p-4', 'border-t', 'border-gray-700', 'bg-black');
     footer.classList.add('p-2', 'bg-black', 'border-t', 'border-gray-700');
     const body = document.querySelector('body');
     body.classList.remove('pb-20');
     body.classList.add('pb-24'); // Adjust padding to make space for chat input
     footer.classList.add('fixed', 'bottom-0', 'left-0', 'right-0');
     // Now, for the real navigation bar
     const mainNav = document.createElement('div');
     mainNav.className = "fixed bottom-0 left-0 right-0 bg-black border-t border-gray-700 flex justify-around items-center py-2";
     mainNav.innerHTML = `
      <a class="text-center nav-inactive" href="#">
        <span class="material-icons">home</span>
        <span class="block text-xs">Home</span>
      </a>
      <a class="text-center nav-inactive" href="#">
        <span class="material-icons">fitness_center</span>
        <span class="block text-xs">Workout</span>
      </a>
      <a class="text-center nav-inactive" href="#">
        <span class="material-icons">restaurant</span>
        <span class="block text-xs">Alimentazione</span>
      </a>
      <a class="text-center nav-inactive" href="#">
        <span class="material-icons">trending_up</span>
        <span class="block text-xs">Progressi</span>
      </a>
      <a class="text-center nav-active px-4 pt-2" href="#">
        <span class="material-icons">chat</span>
        <span class="block text-xs">Chat</span>
      </a>
     `;
     const input = footer.querySelector('input');
     input.addEventListener('focus', () => {
       document.body.removeChild(mainNav);
       body.style.paddingBottom = '70px'; // Space for input bar
     });
     input.addEventListener('blur', () => {
       document.body.appendChild(mainNav);
       body.style.paddingBottom = '140px'; // Space for both
     });
     document.body.appendChild(mainNav);
     body.style.paddingBottom = '140px';
     mainContent.style.paddingBottom = '20px';
  </script>

